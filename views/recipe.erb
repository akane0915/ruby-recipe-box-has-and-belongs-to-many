<h1> <%= @recipe.name %></h1>
<br>

<!-- Recipe Details -->
<p>Rating: <%= @recipe.rating %></p>
<br>
<p> Instructions: <%= @recipe.instructions %></p>
<br>
<p> Ingredients: </p>
<ul>
  <% @recipe.ingredients.each do |ingredient| %>
    <li><%= ingredient.item %></li>
    <% end %>
</ul>
<br>
<p> Tags: </p>

<ul>
  <% @recipe.tags.each do |tag| %>
    <li><%= tag.category %></li>
    <% end %>
</ul>


<hr>
<!-- Add Ingredients and Tags to this recipe -->
<h1>Add Ingredients and Tags to <%= @recipe.name %></h1>

<form action="/recipes/<%= @recipe.id %>" method="post">

  <input type="hidden" name="recipe_id" value="<%= @recipe.id() %>">

  <label for="ingredients">Select Ingredients:</label>
  <select name="ingredient_id">
    <option value=""></option>
    <% @list_ingredients.each() do |ingredient| %>
      <option value="<%= ingredient.id() %>"><%= ingredient.item %></option>
    <% end %>
  </select>

  <label for="tags">Select Tags:</label>
  <select name="tag_id">
    <option value=""></option>
    <% @list_tags.each() do |tag| %>
    <option value="<%= tag.id() %>"><%= tag.category %></option>
    <% end %>
  </select>

  <button class="btn btn-default" type="submit">Add</button>
</form>

<hr>
<!-- Delete Tags from this recipe -->
<h1>Delete a Tag from <%= @recipe.name %></h1>

<form action="/recipes/<%= @recipe.id %>" method="post">
  <input type="hidden" name="_method" value="patch">

  <input type="hidden" name="recipe_id" value="<%= @recipe.id() %>">

  <label for="tags">Select Tag to Delete:</label>
  <select name="tag_id">
    <option value=""></option>
    <% @recipe.tags.each() do |tag| %>
      <option value="<%= tag.id() %>"><%= tag.category %></option>
    <% end %>
  </select>

  <button class="btn btn-default" type="submit">Remove Tag</button>
</form>

<hr>
<!-- Delete this recipe -->
<h1>Delete <%= @recipe.name %></h1>

<form action="/recipes/<%= @recipe.id %>" method="post">
  <input type="hidden" name="_method" value="delete">
  <button class="btn btn-danger" type="submit">Delete this Recipe</button>
</form>
